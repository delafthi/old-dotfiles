[core]
  editor = nvim
  excludesfile = ~/.config/git/ignore
  pager = diff-so-fancy | bat
[user]
  name = Thierry Delafontaine
  email = delafontaineth@pm.me
  signingkey = 4E6FD3947C1D78AF
[gpg]
  program = /usr/bin/gpg
[init]
  defaultBranch = main
[commit]
  gpgsign = true
[tag]
  gpgsign = true
[pull]
  rebase = true
[rebase]
  autoStash = true
[interactive]
  diffFilter = diff-so-fancy --patch
[github]
  user = "delafthi"
[alias]
  br = branch
  co = checkout
  c = commit
  can = commit --amend --no-edit
  ca = commit --amend
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  p = pull
  pr = pull --rebase
  P = push
  Pf = push --force
  st = status -s -u -b --show-stash
[diff]
  colorMoved = default
[color "status"]
  added = blue
  changed = red
  untracked = yellow
[merge]
  autoStash = true
  conflictstyle = diff3
[worktree]
  guessRemote = true
[advice]
  detachedHead = false
[gui]
  fontui = -family \"VictorMono NF\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"VictorMono NF\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
  spellingdictionary = en
  tabsize = 2
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
[push]
  followTags = true
