[core]
	editor = nvim
	excludesfile = ~/.gitignore
[user]
	name = Thierry Delafontaine
	email = delafontaineth@pm.me
  signingkey = AD78A74DD561FC73DD2F95033F9D47D503575097
[gpg]
  program = /usr/bin/gpg
[commit]
  gpgsign = true
[tag]
  gpgsign = true
[pull]
  rebase = true
[github]
  user = "delafthi"
[alias]
  co = checkout
  ci = commit
  st = status -s -u -b --show-stash
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[color "status"]
  added = blue
  changed = red
  untracked = yellow
[merge]
  autoStash = true
[worktree]
  guessRemote = true
[advice]
  detachedHead = false
[gui]
	fontui = -family \"VictorMono Nerd Font\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"VictorMono Nerd Font\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	spellingdictionary = en
	tabsize = 2
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
