# Regex highlighting
color header bold white default ".*"
color header bold white default "^Date"
color header bold blue default "^From:"
color header bold cyan default "^To"
color header bold brightcyan default "^(CC|BCC)"
color header bold magenta default "^Subject"
color body white default ".*"
color body underline blue default "[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+" # mail addresses
color body underline blue default "(https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+" # file links
color body cyan default "\`[^\`]*\`" # backtick quotes
color body bold blue default "^\# \.*" # Markdown h1
color body bold cyan default "^\#\# \.*" # Markdown h2
color body bold brightcyan default "^\#\#\# \.*" # Markdown h3
color body black red "(BAD signature)"
color body brightblack default "(Good signature)"
color body brightblack default "^gpg: Good signature .*"
color body white default "^gpg: "
color body black red "^gpg: BAD signature from.*"
color body blue default "([a-z][a-z0-9+-]*://(((([a-z0-9_.!~*'();:&=+$,-]|%[0-9a-f][0-9a-f])*@)?((([a-z0-9]([a-z0-9-]*[a-z0-9])?)\\.)*([a-z]([a-z0-9-]*[a-z0-9])?)\\.?|[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+)(:[0-9]+)?)|([a-z0-9_.!~*'()$,;:@&=+-]|%[0-9a-f][0-9a-f])+)(/([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*(;([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*)*(/([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*(;([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*)*)*)?(\\?([a-z0-9_.!~*'();/?:@&=+$,-]|%[0-9a-f][0-9a-f])*)?(#([a-z0-9_.!~*'();/?:@&=+$,-]|%[0-9a-f][0-9a-f])*)?|(www|ftp)\\.(([a-z0-9]([a-z0-9-]*[a-z0-9])?)\\.)*([a-z]([a-z0-9-]*[a-z0-9])?)\\.?(:[0-9]+)?(/([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*(;([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*)*(/([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*(;([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*)*)*)?(\\?([-a-z0-9_.!~*'();/?:@&=+$,]|%[0-9a-f][0-9a-f])*)?(#([-a-z0-9_.!~*'();/?:@&=+$,]|%[0-9a-f][0-9a-f])*)?)[^].,:;!)? \t\r\n<>\"]" # Any other linjs

