# Gmail
# ~~~~~~~~~~

set real_name = "Thierry Delafontaine"
set from = "delafontaineth@gmail.com"
set sendmail = "msmtp -a delafontaineth@gmail.com"
alias me Thierry Delafontaine <delafontaineth@gmail.com>
set folder = "~/.mail/gmail"
set header_cache = ~/.cache/neomutt/gmail/headers
set message_cachedir = ~/.cache/neomutt/gmail/bodies
set mbox_type = Maildir
set spool_file = "+INBOX"
set postponed = "+Drafts"
set trash = "+Trash"
set record = "+Sent"
set header_cache = ~/.cache/neomutt/gmail/headercache
set message_cachedir = ~/.cache/neomutt/gmail/messagecache

# Mailboxes
named-mailboxes "== delafontaineth@gmail.com ==" "+INBOX"
mailboxes "+All Mail"
mailboxes "+Archive"
mailboxes "+Drafts"
mailboxes "+Sent"
mailboxes "+Spam"
mailboxes "+Trash"

