# Protonmail
# ~~~~~~~~~~

set real_name = "Thierry Delafontaine"
set from = "delafontaineth@pm.me"
set sendmail = "msmtp -a delafontaineth@pm.me"
alias me Thierry Delafontaine <delafontaineth@pm.me>
set folder = "~/.mail/protonmail"
set header_cache = $cachedir/protonmail/headers
set message_cachedir = $cachedir/protonmail/bodies
set mbox_type = Maildir
set spool_file = "+INBOX"
set postponed = "+Drafts"
set trash = "+Trash"
set record = "+Sent"

# Mailboxes
named-mailboxes "== delafontaineth@pm.me ==" "+INBOX"
mailboxes "+All Mail"
mailboxes "+Archive"
mailboxes "+Drafts"
mailboxes "+Sent"
mailboxes "+Spam"
mailboxes "+Trash"

