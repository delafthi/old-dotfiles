# Proton mail
# ~~~~~~~~~~~

account protonmail
host 127.0.0.1
port 1025
from delafontaineth@pm.me
user delafontaineth@pm.me
passwordeval "pass mail/protonmail/delafontaineth@pm.me"
auth on
tls on
tls_trust_file ~/.config/protonmail/bridge/cert.pem
tls_starttls on
logfile ~/.msmtp.log

# Set default account
# ~~~~~~~~~~~~~~~~~~~

account default : protonmail
